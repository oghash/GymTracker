<h1>Listing session_routines</h1>

<table>
  <tr>
    <th>Session</th>
    <th>Routine</th>
    <th>Weight</th>
    <th>Reps</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @session_routines.each do |session_routine| %>
  <tr>
    <td><%= session_routine.session.updated_at %></td>
    <td><%= session_routine.routine.name %></td>
    <td><%= session_routine.weight %></td>
    <td><%= session_routine.reps %></td>
    <td><%= link_to 'Show', session_routine %></td>
    <td><%= link_to 'Edit', edit_session_routine_path(session_routine) %></td>
    <td><%= link_to 'Destroy', session_routine, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

